{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      // {
      //   "name": "next"
      // }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/data/landing.ts",
    "src/lib/checkUser.ts",
    "src/actions/dashboard.js",
    "src/app/api/seed/route.js",
    "src/actions/seed.js",
    "src/lib/prisma.ts",
    "src/app/(main)/transaction/_components/transaction-form.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
